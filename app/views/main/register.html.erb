	<form method="GET">
		First Name: <input type="text" name="first_name" required><br>
		Last Name: <input type="text" name="last_name" required><br>
		Phone Number: <input type="tel" name="phone_number" placeholder="(123)-456-7890" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}"><br>
		Username: <input type="text" name="username" required><br>
		Password: <input type="password" minlength="8" name="password" required><br>
		Confirm Password: <input type="password" minlength="8" name="confirmPassword"required><br>
		Email: <input type="email" name="email" required><br>
		Confirm Email: <input type="email" name="confirmEmail" required><br>
